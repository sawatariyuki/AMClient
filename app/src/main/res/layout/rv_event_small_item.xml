<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_event_small_item_CL"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rv_event_small_item_title"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="titletitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_event_small_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="8dp"
        android:text="typetype"
        android:textColor="@color/colorPinkMain"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/rv_event_small_item_title"
        app:layout_constraintTop_toBottomOf="@+id/rv_event_small_item_title" />

    <TextView
        android:id="@+id/rv_event_small_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="state"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rv_event_small_item_type"
        app:layout_constraintTop_toBottomOf="@+id/rv_event_small_item_type" />

    <TextView
        android:id="@+id/rv_event_small_item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="length"
        android:textColor="@color/colorPinkMain"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_event_small_item_state"
        app:layout_constraintEnd_toStartOf="@+id/rv_event_small_item_state"
        app:layout_constraintTop_toTopOf="@+id/rv_event_small_item_state" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>